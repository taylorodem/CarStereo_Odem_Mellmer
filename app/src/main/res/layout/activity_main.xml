<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.odem20.carstereo_odem_mellmer.MainActivity">

    <LinearLayout
        android:layout_width="1200dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="1200dp"
            android:layout_height="340dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ToggleButton
                android:id="@+id/Power"
                android:layout_width="127dp"
                android:layout_height="102dp"
                android:text="Power"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textOff="OFF"
                android:textOn="ON"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="97dp"
                android:layout_height="178dp"
                android:orientation="vertical"
                android:visibility="invisible">

            </LinearLayout>

            <ToggleButton
                android:id="@+id/FFRR"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@android:color/holo_orange_dark"
                android:text="ToggleButton"
                android:textOff="Forward"
                android:textOn="Reverse" />

            <TextView
                android:id="@+id/cdtext"
                android:layout_width="338dp"
                android:layout_height="37dp"
                android:layout_weight="0.09"
                android:background="@android:color/background_dark"
                android:backgroundTint="@android:color/background_dark"
                android:text="INSERT DISK HERE"
                android:textColor="@android:color/background_light"
                android:textScaleX="2"
                android:typeface="monospace"
                android:visibility="visible"
                tools:layout_editor_absoluteX="276dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="253dp"
                android:layout_height="185dp"
                android:layout_weight="0.21"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/pauseplay"
                    android:layout_width="75dp"
                    android:layout_height="115dp"
                    android:layout_weight="1.56"
                    android:background="@android:color/holo_green_light"
                    android:text="ToggleButton"
                    android:textOff="Pause"
                    android:textOn="Play"
                    tools:layout_editor_absoluteX="257dp"
                    tools:layout_editor_absoluteY="175dp" />

                <Button
                    android:id="@+id/Stop"
                    android:layout_width="90dp"
                    android:layout_height="116dp"
                    android:layout_weight="0.99"
                    android:background="@android:color/holo_red_dark"
                    android:text="Stop"
                    tools:layout_editor_absoluteX="345dp"
                    tools:layout_editor_absoluteY="175dp" />

                <Button
                    android:id="@+id/Eject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eject"
                    tools:layout_editor_absoluteX="680dp"
                    tools:layout_editor_absoluteY="190dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1200dp"
            android:layout_height="340dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1"
            tools:layout_editor_absoluteX="-68dp"
            tools:layout_editor_absoluteY="-3dp">

            <ImageView
                android:id="@+id/volumeindicator"
                android:layout_width="203dp"
                android:layout_height="131dp"
                app:srcCompat="@mipmap/volume" />

            <SeekBar
                android:id="@+id/volumebar"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="684dp"
                android:layout_height="96dp"
                android:layout_weight="0.42"
                android:background="@android:color/holo_blue_bright"
                android:max="10"
                android:progress="3" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
